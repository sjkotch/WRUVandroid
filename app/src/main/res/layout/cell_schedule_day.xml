<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setLayout"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="20dp"

            android:background="@android:color/white"
            android:text="@string/live_feed_preforming"
            android:textColor="@color/fontBlack"
            android:textSize="16sp"
            android:textStyle="bold"

            tools:layout_editor_absoluteX="-4dp"
            tools:layout_editor_absoluteY="12dp" />

        <TextView
            android:id="@+id/DjName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/live_feed_dj"
            android:textColor="@color/fontWhite"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/show"
            app:layout_constraintTop_toBottomOf="@+id/show" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/live_feed_time_slot"
            android:textColor="@color/fontWhite"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/DjName"
            app:layout_constraintTop_toBottomOf="@+id/DjName" />

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="85dp"
            android:text="@string/live_feed_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/accentRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

</android.support.constraint.ConstraintLayout>